{
  "languages": {
    "Rust": {
      "formatter": "language_server",
      "format_on_save": {
        "external": {
          "command": "cargo",
          "arguments": ["clippy", "--fix", "--allow-dirty", "--allow-staged"]
        }
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "rustfmt": {
          "extraArgs": ["+nightly"]
        }
      }
    }
  }
}
